<?xml version="1.0" encoding="UTF-8" ?>
<suite name="thread" parallel="classes" thread-count="5">

    <!--
        parallel:执行的级别
            tests级别：不同的test tag下的用例可以在不同的线程下执行
                      相同的test tag下的用例只能在同一个线程中执行

            classes级别：不同的classes tag下的可以在不同的线程中执行
                        相同classes tag下的用例在同一个线程中执行


            methods级别：所有用例都可以在不同线程下执行

        thread-count：代表最大并发线程数

        xml下不能指定线程池，只能在方法上可以指定线程池
    -->
    <test name="demo1">
        <classes name="d2">
            <class name="com.course.testng.multiThread.MultiThreadOnXml"/>
            <class name="com.course.testng.BasicAnnotation"/>
        </classes>
    </test>

    <test name="demo2">
        <classes name="d3">
            <class name="com.course.testng.multiThread.MultiThreadOnXml"/>
            <class name="com.course.testng.BasicAnnotation"/>

        </classes>
    </test>
</suite>